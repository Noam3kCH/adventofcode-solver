{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Day",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/src/index.js",
      "args": [
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "Launch Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--findRelatedTests",
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}"
    }
  ]
}

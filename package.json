{
  "name": "adventofcode-solver",
  "version": "1.0.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:shahata/adventofcode-solver.git"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "f(){ if [ -z \"$CI\" ]; then npm run jest -- --onlyChanged $*; else npm run jest -- $*; fi ;};f",
    "jest": "node --experimental-vm-modules node_modules/.bin/jest",
    "lint": "eslint src/**/*.js"
  },
  "dependencies": {
    "inquirer": "^7.3.3",
    "js-combinatorics": "^0.5.0",
    "node-fetch": "^2.6.1",
    "progress": "^2.0.3"
  },
  "devDependencies": {
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es2020": true
    },
    "rules": {
      "jest/expect-expect": "off"
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:prettier/recommended"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "quoteProps": "consistent",
    "arrowParens": "avoid"
  },
  "wallaby": {
    "autoDetect": true,
    "runSelectedTestsOnly": true,
    "env": {
      "params": {
        "runner": "--experimental-vm-modules"
      }
    }
  }
}
